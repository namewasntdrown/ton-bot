{
  "name": "ton-bot-monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "npm --prefix services/bot i && npm --prefix services/wallet-api i && npm --prefix services/api i && npm --prefix services/relayer i",

    "dev": "concurrently -n bot,wallet -c blue,magenta \"npm:dev:bot\" \"npm:dev:wallet\"",

    "dev:bot": "npm --prefix services/bot run dev",
    "dev:wallet": "npm --prefix services/wallet-api run dev",

    "dev:api": "npm --prefix services/api run dev",        
    "dev:stack": "concurrently -n bot,wallet,api -c blue,magenta,green \"npm:dev:bot\" \"npm:dev:wallet\" \"npm:dev:api\""
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.15.6"
  }
}
